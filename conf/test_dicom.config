/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/liverctanalysis -profile test,<docker/singularity>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test DICOM profile'
    config_profile_description = 'Minimal test DICOM dataset to check pipeline function'

    // Limit resources
    max_cpus   = 1
    max_memory = 6.GB
    max_time   = 6.h

    // Input data
    input  = './assets/dicom_test/'
}
