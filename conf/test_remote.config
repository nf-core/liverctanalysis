/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/liverctanalysis -profile test_remote,<docker/singularity>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test remote profile'
    config_profile_description = 'Minimal test dataset to check pipeline function, from remote source'

    // Limit resources
    max_cpus   = 1
    max_memory = 6.GB
    max_time   = 6.h

    // Input data
    input  = 'https://zenodo.org/record/XXXXX/files/testdata_large.tar.gz?download=1'
}
